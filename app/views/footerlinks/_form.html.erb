<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title">ADD EXTRA LINKS</h4>
              </div>
              <div class="card-body">
                <%= form_with(model: footerlink, local: true) do |form| %>
                  <% if footerlink.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(footerlink.errors.count, "error") %> prohibited this footerlink from being saved:</h2>

                      <ul>
                      <% footerlink.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <br>
                  <br>
                  <div class="row">
                    <div class="col-md-1 offset-3">
                      <%= form.label :name, class: "footer-name" %>
                    </div>
                    <div class="col-md-4 ">
                      <div class="field">
                        <%= form.text_field :name, class: "form-control" %>
                      </div>                 
                    </div>
                    <div class="col-md-1">
                      <%= form.submit "Add", class: "btn btn-primary pull-right"%>
                    </div>
                  </div>
                  <br>
                  
                  <div class="clearfix"></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

