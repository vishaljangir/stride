<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">FOOTER LINKS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_footerlink_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <table class="table">
                      <thead>
                        <th>LINKS</th>
                        <th></th>
                        <th></th>
                      </thead>
                      <tbody>
                        <% @footerlinks.each do |footerlink| %>
                          <tr>
                            <td><%= footerlink.name %></td>
                            <td><%= link_to 'CHANGE', edit_footerlink_path(footerlink) %></td>
                            <td><%= link_to 'REMOVE', footerlink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            <div class="clearfix"></div> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
                       