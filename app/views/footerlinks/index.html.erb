<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">FOOTER LINKS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_footerlink_path, class: "fa fa-plus add" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <table class="table">
                      
                      <tbody>
                        <% @footerlinks.each do |footerlink| %>
                          <tr>
                            <td><%= footerlink.name %></td>
                            <td style="text-align: right;"><%= link_to '', edit_footerlink_path(footerlink), class: "fa fa-pencil" %>
                            <%= link_to '', footerlink, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            <div class="clearfix"></div> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
                       