<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">TRAINING BLOGS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_footerlink_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-12">
                      <% @footerlinks.each do |footerlink| %>
                        <%= footerlink.name %>
                        <%= link_to 'Edit', edit_footerlink_path(footerlink) %>
                        <%= link_to 'Destroy', footerlink, method: :delete, data: { confirm: 'Are you sure?' } %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>