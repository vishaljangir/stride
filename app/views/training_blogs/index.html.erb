<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">TRAINING BLOGS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_training_blog_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-12">
                      <% @training_blogs.each do |training_blog| %>
                        <div class="col-md-3 logo-container">
                          <%= image_tag(training_blog.image, class: "img-thumbnail", alt: "Cinque Terre") %>
                          <div class="middle">
                            <br/>
                            <p><%= training_blog.description %></p>
                            <br/>
                            <h3p><%= "By " +training_blog.name %></h3>
                            <br/>
                            <%= link_to 'Change', edit_training_blog_path(training_blog), class: "btn btn-dark" %>
                            <%= link_to 'Remove', training_blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>