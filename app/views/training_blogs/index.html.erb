<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">TRAINING BLOGS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_training_blog_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      <table class="table">
                        <thead>
                          <th>IMAGE</th>
                          <th>DESCRIPTION</th>
                          <th>NAME</th>
                          <th></th>
                          <th></th>
                        </thead>
                        <tbody>
                          <% @training_blogs.each do |training_blog| %>
                            <tr>
                              <td><%= image_tag(training_blog.image, class: "img-thumbnail", alt: "Cinque Terre", width: "236", height: "236") %></td>
                              <td><%= training_blog.description %></td>
                              <td><%= training_blog.name %></td>
                              <td><%= link_to '', edit_training_blog_path(training_blog), class: "fa fa-pencil" %></td>
                              <td><%= link_to '', training_blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                      </div>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                
              </div>
            </div>
          </div>
         
        </div>
      </div>
    </div>
   
  </div>
</div>
