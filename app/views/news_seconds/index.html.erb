<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">NEWS SECOND</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_news_second_path, class: "fa fa-plus add" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <% @news_seconds.each do |news_second| %>
                      <div class="col-md-3 logo-container">
                        <%= image_tag(news_second.image, class: "img-thumbnail", alt: "news") %>
                          <h3><%= news_second.heading %></h3>
                          <p><%= news_second.description %></p>
                          
                          <%= link_to 'Change', edit_news_second_path(news_second), class: "btn btn-raised btn-secondary" %>
                          <%= link_to 'Remove', news_second, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                        
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>