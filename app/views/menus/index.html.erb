<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">Menus</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_menu_path, class: "fa fa-plus add" %>
                </div>
                </div>
              </div>
              <div class="card-body">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">MENU</th>
                      <th scope="col">SUBMENU</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @menus.each do |menu| %>
                    <tr>
                      <td><%= menu.name %></td>
                      <td>
                        <% menu.submenus.each do |submenu| %>
                          <%= submenu.name %><br><hr>
                        <% end %>
                      </td>
                      <td style="text-align: right;">
                        <%= link_to '', edit_menu_path(menu), class: "fa fa-pencil" %>
                        <%= link_to '', menu, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>  
        </div>
      </div>
    </div> 
  </div>
</div>