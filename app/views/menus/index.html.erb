<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">Menus</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to 'Add Menu', new_menu_path, class: "btn btn-primary btn-sm" %>
                </div>
                </div>
              </div>
              <div class="card-body">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">MENU</th>
                      <th scope="col">SUBMENU</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% no = 0 %>
                    <% @menus.each do |menu| %>
                    <tr>
                      <td><%= menu.name %></td>
                      <td>
                        <% menu.submenus.each do |submenu| %>
                          <%= no += 1 %>&nbsp<%= submenu.name %><br>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to 'CHANGE', edit_menu_path(menu) %>
                        <%= link_to 'REMOVE', menu, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>  
        </div>
      </div>
    </div> 
  </div>
</div>