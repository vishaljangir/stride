<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title">ADD MENU</h4>
              </div>
              <div class="card-body">
                <%= form_with(model: menu, local: true) do |form| %>
                  <% if menu.errors.any? %>
                    <div id="error_explanation">

                      <ul>
                      <% menu.errors.full_messages.each do |message| %>
                        <li class="alert"><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="field">
                    <%= form.label :name %>
                    <%= form.text_field :name, class: "form-control" %>
                  </div>
                  <div class="fields">
                    <%= form.fields_for :submenus do |builder| %>
                      <%= render 'submenu', f: builder  %>
                    <% end %>
                  </div>
                  <%= link_to_add_row('ADD SUBMENU', form, :submenus, class: 'btn btn-primary') %>
                  <%= form.submit "Add", class: "btn btn-primary pull-right"%>
                  <div class="clearfix"></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

