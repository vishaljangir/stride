<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-11">
                    <h4 class="card-title">NEWS</h4>
                  </div>
                  <div class="col-md-1">
                    <%= link_to '', new_news_first_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <table class="table">
                      <thead>
                        <th>IMAGE</th>
                        <th>HEADING</th>
                        <th>DESCRIPTION</th>
                        <th></th>
                        <th></th>
                      </thead>
                      <tbody>
                        <% @news_firsts.each do |news_first| %>
                          <tr>
                            <td><%= image_tag(news_first.image, class: "img-thumbnail", alt: "Cinque Terre", width: "236", height: "236") %></td>
                            <td><strong><%= news_first.heading %></strong></td>
                            <td><%= news_first.description %></td><!-- 
                            <td><%= link_to 'Show', news_first %></td> -->
                            <td><%= link_to '', edit_news_first_path(news_first), class: "fa fa-pencil" %></td>
                            <td><%= link_to '', news_first, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    </div>
                  </div>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
