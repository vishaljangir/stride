<div class="wrapper ">
    
    <div class="main-panel">
      <!-- Navbar -->
      
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <div class="row">
                    <div class="col-md-10">
                      <h4 class="card-title">NEWS</h4>
                      <p class="card-category">news</p>
                    </div>
                    <div class="col-md-2">
                      <%= link_to 'Add News', new_news_first_path, class: "btn btn-primary btn-sm" %>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                    <div class="row">
                      <div class="col-md-12">
                        <table>
                          <thead>
                            <th>FIRST NEWS</th>
                          </thead>
                          <tbody>
                            <% @news_firsts.each do |news_first| %>
                              <tr>
                                <td><%= image_tag(news_first.image, class: "img-thumbnail", alt: "Cinque Terre", width: "236", height: "236") %></td>
                                <td><strong><%= news_first.heading %></strong></td>
                                <td><%= news_first.description %></td>
                                <td><%= link_to 'Show', news_first %></td>
                                <td><%= link_to 'Edit', edit_news_first_path(news_first) %></td>
                                <td><%= link_to 'Destroy', news_first, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                        </div>
                      </div>
                    </div>
                    <div class="clearfix"></div>
                  
                </div>
              </div>
            </div>
           
          </div>
        </div>
      </div>
     
    </div>
  </div>
