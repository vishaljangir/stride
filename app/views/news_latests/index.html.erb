<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">LATEST NEWS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_news_latest_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <% @news_latests.each do |news_latest| %>
                      <div class="col-md-4 logo-container">
                        <%= image_tag(news_latest.image, class: "img-thumbnail", alt: "Cinque Terre", width: "236", height: "236") %>
                        <div class="middle">
                          <p><%= news_latest.description %></p>
                          <br/>
                          <h4><%= "By " + news_latest.name %></h4>
                          <p><%= news_latest.created_at.strftime("%d-%m-%Y") %></p>
                          <br/>
                          <%= link_to 'Change', edit_news_latest_path(news_latest), class: "btn btn-dark" %>
                          <%= link_to 'Remove', news_latest, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div>    
            </div>
          </div>
        </div> 
      </div>
    </div>
  </div> 
</div>