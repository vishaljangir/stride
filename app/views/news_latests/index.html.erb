<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">LATEST NEWS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_news_latest_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      <table class="table">
                        <thead>
                          <th>IMAGE</th>
                          <th>DESCRIPTION</th>
                          <th>NAME</th>
                          <th>DATE</th>
                          <th></th>
                          <th></th>
                        </thead>
                        <tbody>
                          <% @news_latests.each do |news_latest| %>
                            <tr>
                              <td><%= image_tag(news_latest.image, class: "img-thumbnail", alt: "Cinque Terre", width: "236", height: "236") %>
                              <td><%= news_latest.description %></td>
                              <td><%= "By " + news_latest.name %></td>
                              <td><%= news_latest.created_at.strftime("%d-%m-%Y") %></td>
                              <td><%= link_to '', edit_news_latest_path(news_latest), class: "fa fa-pencil" %></td>
                              <td><%= link_to '', news_latest, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                      </div>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                
              </div>
            </div>
          </div>
         
        </div>
      </div>
    </div>
   
  </div>
</div>
