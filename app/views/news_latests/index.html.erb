<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">LATEST NEWS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_news_latest_path, class: "fa fa-plus add" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <% @news_latests.each do |news_latest| %>
                      <div class="col-md-3 logo-container">
                        <%= image_tag(news_latest.image, class: "img-thumbnail", alt: "news_latest") %>
                          <p><%= news_latest.description %></p>
                          
                          <h5><%= "By " + news_latest.name %></h5>
                          <p><%= news_latest.created_at.strftime("%d-%m-%Y") %></p>
                          <br/>
                          <center>
                            <%= link_to 'Change', edit_news_latest_path(news_latest), class: "btn btn-raised btn-secondary" %>
                            <%= link_to 'Remove', news_latest, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                          </center>
                          
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div>    
            </div>
          </div>
        </div> 
      </div>
    </div>
  </div> 
</div>