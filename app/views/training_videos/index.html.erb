<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">Training Videos</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to 'Add new', new_training_video_path, class: "", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-12">
                      <% @training_videos.each do |training_video| %>
                        <div class="col-md-3 logo-container">
                          <%= image_tag(training_video.image, class: "img-thumbnail", alt: "video") %>
                          <div class="middle">
                            <br/>
                            <p><%= training_video.caption %></p>
                            <br/>
                            <h5><%= "From " +training_video.link %></h5>
                            <br/>
                            <%= link_to 'Change', edit_training_video_path(training_video), class: "btn btn-default" %>
                            <%= link_to 'Remove', training_video, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>