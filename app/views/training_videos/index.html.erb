<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">Training Videos</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_training_video_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <table class="table">
                      <thead>
                        <th>VIDEO</th>
                        <th>CAPTION</th>
                        <th>DATE</th>
                        <th></th>
                        <th></th>
                      </thead>
                      <tbody>
                        <% @training_videos.each do |training_video| %>
                          <tr>
                            <td><%= video_tag(url_for(training_video.video), style: "width: 300px; height: auto;", controls: "") %></td>
                            <td><%= training_video.caption %></td>
                            <td><%= training_video.created_at.strftime("%d-%m-%y") %></td>
                            <td><%= link_to '', edit_training_video_path(training_video), class: "fa fa-pencil" %></td>
                            <td><%= link_to '', training_video, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                    </div>
                  </div>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
