<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">SLIDERS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_slider_path, class: "fa fa-plus add" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      <% @sliders.each do |slider| %>
                        <div class="col-md-3 logo-container">
                          <%= image_tag(slider.image, class: "img-thumbnail", alt: "slider", style: "height: 200px") %>
                          
                            <h3><%= slider.heading %></h3>
                            
                            <p><%= slider.description %></p>
                            <br/>
                            <center>
                              <%= link_to 'Change', edit_slider_path(slider), class: "btn btn-raised btn-secondary" %>
                              <%= link_to 'Remove', slider, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                            </center>
                            
                          
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
