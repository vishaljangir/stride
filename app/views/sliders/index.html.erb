<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">SLIDER PHOTOS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to '', new_slider_path, class: "fa fa-plus", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      <% @sliders.each do |slider| %>
                        <div class="col-md-4 logo-container">
                          <%= image_tag(slider.image, class: "img-thumbnail", alt: "Cinque Terre", width: "236", height: "236") %>
                          <div class="middle">
                            <h3><%= slider.heading %></h3>
                            <br/>
                            <p><%= slider.description %></p>
                            <br/>
                            <%= link_to '', edit_slider_path(slider), class: "fa fa-pencil" %>
                            <%= link_to '', slider, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
