<div class="wrapper ">
  <div class="main-panel">
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <div class="row">
                  <div class="col-md-10">
                    <h4 class="card-title">SLIDER PHOTOS</h4>
                  </div>
                  <div class="col-md-2">
                    <%= link_to 'Add new', new_slider_path, class: "", style: "color: white; border: 1px solid; padding: 9px; float: right;" %>
                  </div>
                </div>
              </div>
              <div class="card-body">
                  <div class="row">
                    <div class="col-md-12">
                      <% @sliders.each do |slider| %>
                        <div class="col-md-4 logo-container">
                          <%= image_tag(slider.image, class: "img-thumbnail", alt: "slider") %>
                          <div class="middle">
                            <h3><%= slider.heading %></h3>
                            <br/>
                            <p><%= slider.description %></p>
                            <br/>
                            <%= link_to 'Change', edit_slider_path(slider), class: "btn btn-default" %>
                            <%= link_to 'Remove', slider, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <div class="clearfix"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
