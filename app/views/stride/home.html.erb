<style type="text/css">
  .centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
</style>
<div class="card">
 
    <% if user_signed_in? %>
      <%= link_to "logout", destroy_user_session_path(@user), method: :delete, style: "pull-right" %>
    <% else %>
      <%= link_to "sigup", new_user_session_path %>
      <%= link_to "login", new_user_session_path %>
    <% end %>  
</div>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        <% if @logos.present? %><%= image_tag(@logos.last.image, :width => '70px') %><% else %><%= image_tag("Logo-USB1.png", :width => '70px') %>
        <% end %></a>
    </div>
    <% Menu.all.each do |menu| %>
      <ul class="nav navbar-nav">
          <li><%= menu.name %></li>
          <% menu.submenus.each do |submenu| %>
            <ul>
              <li><%= submenu.name %></li>
            </ul>
          <% end %>
      </ul>
    <% end %>
  </div>
</nav>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
        <%= image_tag("chicago.jpg", style: "width:100%; height: 400px") %>
    </div>
    <% @sliders.last(5).each do |slider| %>
      <div class="carousel-item">
          <%= image_tag(slider.image, style: "width:100%; height: 400px") %>
          <div class="centered"><center><h1><%= slider.heading %></h1><br><h3><%= slider.description %></h3><br><button class="btn btn-primary">click</button></center></div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  
</div>
